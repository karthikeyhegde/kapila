<% txitem = TxnItem.new() 
   txitem.id = row_no.to_i
%>
<tr id="trow_<%=row_no%>" class='item_area'>
<%= fields_for "txn_items[]", txitem do |t| %>

<td style="padding:4px;border:0;" class='item_arr_no'>
     <%=link_to_function  (image_tag "cross_circle.png", :size=>"12x12"), "removeItem('#{row_no}')", style:'font-size:12px;font-weight:bold;'%>&nbsp;
     <%=t.select  :item_id, options_for_select(["Select .."]+Item.picklist), :style=>"width:100px;"%>
</td>
<td style="padding:1px;padding-top:8px;border:0;" class='item_arr_no' colspan='2'> 
     <%=t.text_field :number,  id:"item_number_#{row_no}",class:"item_numbers", :style=>"height:30px;width:100px;" , :placeholder =>"Numbers" %>

     <%=space(4)%>
     <%=t.text_field :price, id:"item_price_#{row_no}", class:"item_numbers", :style=>"height:30px;width:100px;", :placeholder => "Price" %>

     <%=space(23)%>
     <span id='item_val_<%=row_no%>' class='item_total'></span> &nbsp;&nbsp;&nbsp;
     
</td>
 
 <%end%>
 <tr>

 <script type="text/javascript">

 $('#txn_items_<%=txitem.id%>_item_id').select2({
    width:'210px',

 });


 </script>
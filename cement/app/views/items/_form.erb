<h5>Add New Item</h5>
<%= form_for @item do |f| %>
<div class="row-fluid">

  <div class="span6">
    <div class="row-fluid">
      <div class="span2">Name: </div>
      <div class="span4"><%= f.text_field :name %> </div>
    </div>
    <div class="row-fluid">
      <div class="span2">Type: </div>
      <div class="span4"><%= f.text_field :item_type %> </div>
    </div>
    <div class="row-fluid">
      <div class="span2">Description: </div>
      <div class="span4"><%= f.text_area :description, :rows => '5'%> </div>
    </div>

     <div class="row-fluid">
      <div class="span2">Starting Stock: </div>
      <div class="span4"><%= f.text_field :starting_stock, :style =>"height:30px;"%> </div>
    </div>

  </div>


</div>

<div class="row-fluid">
  <div class="span12">
     <hr>
    <%=space(10).html_safe%> <%= f.submit %><%=space(5).html_safe%> <%=link_to "Cancel", items_url, :style=>"font-weight:bold"%>
  </div>
</div>
<% end %>

<table class="table zebra-striped">
  <thead style="background-color:#C0C0C0;">
    <th>Name</th>
    <th>Description</th>
    <th>Item Type</th>
    <th style="color:#330099">Action</th>
  </thead>
  <tbody>
   <% i = 0

    @trx_types.each{|c|
     i+= 1 %>
    <%if i%2 == 0%>
       <tr>
    <%else%>
       <tr class="info">
    <%end%>

    <td><%=c.name%></td>
    <td><%=c.description%></td>
    <td><%=c.creater%></td>
    <td>
          <span id ='t1'>
          <%=link_to "Edit", edit_transaction_types_url(c.id), :class=>"label label-info"%><%=space(5).html_safe%>
         </span>
         <span id='t2'>
          <%=link_to "Delete", remove_transaction_types_url(c.id), :method => :post, :onclick => "return confirm('Are you sure?')", :class=>"label label-warning"%>
         </span>
      </td>
   </tr>
   <%} unless @trx_types.blank?%>
  </tbody>

</table>

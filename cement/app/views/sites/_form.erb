
<%= form_for @site do |f| %>
<div class="row-fluid">

  <div class="span6">
    <div class="row-fluid">
      <div class="span2">Name: </div>
      <div class="span4"><%= f.text_field :name %> </div>
    </div>
    <div class="row-fluid">
      <div class="span2">Address: </div>
      <div class="span4"><%=f.text_area :address, :rows => '5'%>  </div>
    </div>
    <div class="row-fluid">
      <div class="span2">Place: </div>
      <div class="span4"><%= f.text_field :place%> </div>
    </div>
    <div class="row-fluid">
      <div class="span2">Start Date: </div>
      <div class="span4"><%= f.text_field :start_date%> </div>
    </div>
  </div>


</div>

<div class="row-fluid">
  <div class="span12">
     <hr>
     <%= f.submit %><%=space(5).html_safe%> <%=link_to "Cancel", sites_url, :style=>"font-weight:bold"%>

  </div>
</div>
<% end %>

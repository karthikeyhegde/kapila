
<script type="text/javascript">
  function site_selected(id,name){


    $('#transaction_site_id').val(id);
    $('#txn_site').val(name);
    $('#contact-modal-window').modal('toggle');
  }

</script>

<table class="table table-bordered table-striped " style="font-size:12px;">
  <thead>
    <th>Name</th>
    <th>Place</th>
    <th>Start Date</th>
  </thead>
  <tbody>
   <% @sites.each{ |c| %>
    <tr>
     <td><%=link_to_function "#{c.name} ",  "site_selected('#{c.id}','#{c.name}' )" %></td>
     <td><%=c.place%></td>
     <td><%=c.start_date%></td>
   </tr>
   <%}%>
  </tbody>

</table>

<%= form_for  @user, :url => save_new_password_user_path do |f| %>
<div class="row-fluid">

  <div class="span12">
    <div class="row-fluid">
    <br><br>
      <div class="span8" ><b>Change the password to access the application</b>
         <%if !flash[:error].blank?%>
             <div class="alert alert-warning" role="alert"><%=flash[:error]%></div>
          <%end%>

      </div>
      
    </div>
    <div class="row-fluid">
      <div class="span4" style='text-align:right;'>New Password </div>
      <div class="span4"><%= f.text_field :password, style:'height:30px;' %> </div>
    </div>
    <div class="row-fluid">
      <div class="span4" style='text-align:right;'>Confirm New Password</div>
      <div class="span4", style:'height:30px;'><%= f.text_field :password_confirmation %> </div>
    </div>
    <div class="row-fluid">
  <div class="span12">
    <%=hidden_field_tag('save_new_password','1')%>
     <hr>
    <%=space(10).html_safe%> <%= f.submit "Change Password" %><%=space(5).html_safe%> <%=link_to "Cancel", transactions_url, :style=>"font-weight:bold"%>
  </div>
</div>
 <%end%>   